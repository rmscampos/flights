<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  
  <label>Airport:</label>
  <select name="airport">
      <option value="AUS">Austin</option>
      <option value="DAL">Dallas</option>
      <option value="LAX">Los Angeles</option>
      <option value="SEA">Seattle</option>
  </select>
  <label>Airline:</label>
  <select name="airline">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
  </select>
  <label>Flight Number:</label>
  <input type="text" name="flightNumber">
  <label>Date</label>
  <input class="localTime" type="datetime-local" name="departs">
  <input id="submit" type="submit" value="Add Flight">

</form>

<%- include('../partials/footers') %>
